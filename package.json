{
  "name": "loomlite",
  "version": "6.0.0",
  "description": "LoomLite - Semantic Knowledge Navigator",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && uvicorn api:app --reload --host 127.0.0.1 --port 8000",
    "dev:frontend": "python3 -m http.server 3000 --directory frontend",
    "start:backend": "cd backend && uvicorn api:app --host 0.0.0.0 --port 8000",
    "start:frontend": "python3 -m http.server 3000 --directory frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["knowledge-graph", "semantic-search", "ontology", "visualization"],
  "author": "Legend1280",
  "license": "MIT"
}
